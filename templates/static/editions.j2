{% extends "templates/partials/base.j2" %}
{% block title %}Browse editions{% endblock title %}

{% block page_description %}
<meta name="description" content="Browse the Editions via interactivate table">
{% endblock page_description %}

{% block scriptHeader %}
<script src="https://cdn.sheetjs.com/xlsx-0.20.3/package/dist/xlsx.full.min.js"></script>
<link href="https://unpkg.com/tabulator-tables@6.2.1/dist/css/tabulator.min.css" rel="stylesheet">
<link href="https://unpkg.com/tabulator-tables@6.2.1/dist/css/tabulator_bootstrap5.min.css" rel="stylesheet">
